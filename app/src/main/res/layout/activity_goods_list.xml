<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.GoodsListActivity">
    <include layout="@layout/topbar_layout1"
        android:layout_height="50dp"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_px_zonghe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="@color/text_price_red"
            android:text="综合"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_px_xiaoliang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="销量"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_px_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="价格"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_px_sx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="筛选"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/glist_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>