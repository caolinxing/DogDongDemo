<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:padding="10dp">
    <ImageView
        android:id="@+id/toolbar_iv_saoyisao"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/sao_kind"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/tuoyuan_shape"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/toolbar_iv_search"
            android:layout_width="18dp"
            android:layout_marginLeft="3dp"
            android:layout_height="match_parent"
            android:src="@drawable/search_icon2"/>
        <EditText
            android:id="@+id/toolbar_edi_search"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/toolbar_iv_root"
            android:layout_width="18dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:src="@drawable/root"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/toolbar_iv_kind"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_height="match_parent"
        android:src="@drawable/kind_liner"/>
</LinearLayout>