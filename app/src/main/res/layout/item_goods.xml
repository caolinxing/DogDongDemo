<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_gl_sdv"
        app:roundedCornerRadius="10dp"
        android:padding="10dp"
        android:layout_width="80dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_toRightOf="@id/item_gl_sdv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
           android:id="@+id/item_gl_tv_title"
            style="@style/item_gl_tv_style"
            android:textSize="14sp"
            android:text="Tile"
            android:textColor="@color/text_title_black" />
        <TextView
           android:id="@+id/item_gl_bargin_price"
            style="@style/item_gl_tv_style"
            android:textSize="12sp"
            android:text="90"
            android:textColor="@color/text_answer"/>
        <TextView
           android:id="@+id/item_gl_tv_price"
            style="@style/item_gl_tv_style"
            android:textSize="14sp"
            android:text="90"
            android:textColor="@color/text_price_red"/>
        <TextView
           android:id="@+id/item_gl_tv_time"
            style="@style/item_gl_tv_style"
            android:text="2018-09-0"
            android:textSize="13sp"
            android:textColor="@color/text_gray"/>
    </LinearLayout>
</RelativeLayout>